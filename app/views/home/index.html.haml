%section#product-slider
  .row
    .container
      #content
        %span{ :class => 'prevControl' }
          =image_tag( 'prev-control.png')
        %span{ :class => 'nextControl' }
          =image_tag( 'next-control.png')
        %div{ :class => 'cycle-slideshow', :id => 'slider', 
          :data => {'cycle-slides' => '> .product', 
          'cycle-fx' => 'scrollHorz', 
          'cycle-timeout' => 0, 
          'cycle-prev' => '.prevControl', 
          'cycle-next' => '.nextControl' } }
          
          %article.product

